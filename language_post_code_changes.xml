<?xml version="1.0" encoding="UTF-8"?>
<modification>
	<id>Customization to Post Code Language</id>
	<version>1.0.0</version>
	<vqmver>2.3.2</vqmver>
	<author>jimlind</author>

	<file path="catalog/language/english/checkout/" name="cart.php,checkout.php">
        <operation error="abort">
        	<search position="replace"><![CDATA[
        		'Post Code:'
        	]]></search>
            <add trim="true"><![CDATA[
				'ZIP Code:'
          	]]></add>
        </operation>
	</file>

